    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        <li class="dropdown">
          <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
            <% if login? %>
              <%= myname %> <b class="caret"></b>
            <% else %>
              menu <b class="caret"></b>
            <% end %>
          <% end %>
